<%- include('partials/header', { 
  title: 'Edit Hisab',
  isLoggedIn: true,
  pageTitle: 'Edit Hisab'
}) %>

<div class="max-w-2xl mx-auto mb-8">
  <div class="card p-4 md:p-6 lg:p-8 rounded-lg shadow-md">
    <form action="/editHisab/<%= hisab._id %>" method="POST" class="space-y-6">
      <div class="form-group">
        <label for="name" class="form-label text-custom-primary">Hisab Name</label>
        <input
          type="text"
          id="name"
          name="name"
          value="<%= hisab.name %>"
          required
          class="form-control bg-custom-white text-custom-primary border border-custom"
        />
      </div>

      <div class="form-group">
        <label for="description" class="form-label text-custom-primary">Description</label>
        <textarea
          id="description"
          name="description"
          rows="4"
          required
          class="form-control bg-custom-white text-custom-primary border border-custom"
        ><%= hisab.description %></textarea>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <div class="flex items-center bg-custom-gray p-3 rounded-lg">
          <input
            type="checkbox"
            id="isEncrypted"
            name="isEncrypted"
            <%= hisab.isEncrypted ? 'checked' : '' %>
            class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-custom rounded"
          />
          <label for="isEncrypted" class="ml-2 block text-sm text-custom-primary">
            <i class="fas fa-lock text-blue-600 mr-1"></i> Encrypt Hisab
          </label>
        </div>

        <div class="flex items-center bg-custom-gray p-3 rounded-lg">
          <input
            type="checkbox"
            id="isShareable"
            name="isShareable"
            <%= hisab.isShareable ? 'checked' : '' %>
            class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-custom rounded"
          />
          <label for="isShareable" class="ml-2 block text-sm text-custom-primary">
            <i class="fas fa-share-alt text-blue-600 mr-1"></i> Make Shareable
          </label>
        </div>
      </div>

      <div class="flex flex-col sm:flex-row justify-end gap-3 mt-8">
        <a
          href="/viewHisab/<%= hisab._id %>"
          class="btn-secondary px-6 py-2 rounded-md text-center"
        >
          Cancel
        </a>
        <button
          type="submit"
          class="btn-primary px-6 py-2 rounded-md"
        >
          Save Changes
        </button>
      </div>
    </form>

    <div class="mt-8 pt-6 border-t border-custom">
      <form action="/deleteHisab/<%= hisab._id %>" method="POST" class="flex justify-end">
        <button
          type="submit"
          class="px-6 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 transition-colors"
          onclick="return confirm('Are you sure you want to delete this hisab? This action cannot be undone.')"
        >
          <i class="fas fa-trash-alt mr-2"></i> Delete Hisab
        </button>
      </form>
    </div>
  </div>
</div>

<%- include('partials/footer', { isLoggedIn: true }) %> 