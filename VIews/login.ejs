</head>
<body>
    <nav class="bg-white shadow-md">
        <div class="max-w-7xl mx-auto px-4">
          <div class="flex justify-between items-center h-16">
            <div class="flex items-center">
              <a href="/" class="text-2xl font-bold text-blue-600">
                <i class="fas fa-book-open mr-2"></i>KhataBook
              </a>
            </div>
            <div class="flex items-center gap-4">
              <div class="hidden md:flex items-center gap-2">
                <button class="p-2 rounded-full bg-gray-200 hover:bg-gray-300">
                  <i class="fas fa-moon text-gray-600"></i>
                </button>
                <button class="p-2 rounded-full bg-gray-200 hover:bg-gray-300">
                  <i class="fas fa-sun text-gray-600"></i>
                </button>
              </div>
              <div class="flex items-center gap-3">
                <a href="/login" class="px-4 py-2 rounded-md bg-blue-600 text-white hover:bg-blue-700">Login</a>
                <a href="/register" class="px-4 py-2 rounded-md border border-blue-600 text-blue-600 hover:bg-blue-50">Register</a>
              </div>
            </div>
          </div>
        </div>
      </nav>
<%- include('partials/header', { 
  title: 'Login', 
  isLoggedIn: false,
  pageTitle: 'Login to Your Account'
}) %>

<div class="flex justify-center">
  <div class="card w-full max-w-md p-6 md:p-8 rounded-lg shadow-md">
    <% if (typeof error !== 'undefined' && error) { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <%= error %>
      </div>
    <% } %>
    
    <form action="/loginuser" method="post" class="space-y-4">
      <div class="form-group">
        <label for="email" class="form-label text-custom-primary">Email</label>
        <input 
          type="email" 
          id="email" 
          name="email" 
          placeholder="Enter your email" 
          class="form-control bg-custom-white text-custom-primary border border-custom"
          required
        >
      </div>
      
      <div class="form-group">
        <label for="password" class="form-label text-custom-primary">Password</label>
        <input 
          type="password" 
          id="password" 
          name="password" 
          placeholder="Enter your password" 
          class="form-control bg-custom-white text-custom-primary border border-custom"
          required
        >
      </div>
      
      <div class="flex items-center justify-between mb-4">
        <div class="flex items-center">
          <input id="remember" name="remember" type="checkbox" class="h-4 w-4 text-blue-600">
          <label for="remember" class="ml-2 block text-sm text-custom-secondary">Remember me</label>
        </div>
      </div>
      
      <button type="submit" class="btn-primary w-full py-3 rounded-md">
        Sign In
      </button>
    </form>
    
    <div class="mt-6 text-center">
      <p class="text-custom-secondary">
        Don't have an account? 
        <a href="/register" class="text-blue-600 hover:text-blue-800 font-medium">Register</a>
      </p>
    </div>
  </div>
</div>

<%- include('partials/footer', { isLoggedIn: false }) %>
</body>
</html>
