<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title + ' - KhataBook' : 'KhataBook' %></title>
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/images/favicon.png">
    <!-- Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap">
    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- CSS -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="/css/theme.css" rel="stylesheet">
    <link href="/css/responsive.css" rel="stylesheet">
    <% if (typeof extracss !== 'undefined') { %>
        <%- extracss %>
    <% } %>
</head>
<body class="bg-custom-white">
    <!-- Mobile Navigation Button -->
    <button id="mobileMenuBtn" class="md:hidden fixed top-4 right-4 z-50 bg-blue-600 text-white p-2 rounded-full shadow-lg">
        <i class="fas fa-bars"></i>
    </button>

    <!-- Main Navigation -->
    <nav class="bg-custom-white shadow-md border-b border-custom">
        <div class="container mx-auto">
            <div class="flex justify-between items-center h-16 px-4">
                <div class="flex items-center">
                    <a href="<%= typeof isLoggedIn !== 'undefined' && isLoggedIn ? '/dashboard' : '/' %>" class="text-2xl font-bold text-blue-600">
                        <i class="fas fa-book-open mr-2"></i>KhataBook
                    </a>
                </div>
                <div class="hidden md:flex items-center gap-4">
                    <button id="themeToggle" class="theme-toggle p-2 rounded-full hover:bg-custom-gray">
                        <i class="fas fa-moon text-custom-primary"></i>
                    </button>
                    <% if (typeof isLoggedIn !== 'undefined' && isLoggedIn) { %>
                        <div class="flex items-center gap-3">
                            <a href="/dashboard" class="btn-secondary px-4 py-2 rounded-md">Dashboard</a>
                            <a href="/profile" class="btn-secondary px-4 py-2 rounded-md">Profile</a>
                            <a href="/logout" class="btn-primary px-4 py-2 rounded-md">LogOut</a>
                        </div>
                    <% } else { %>
                        <div class="flex items-center gap-3">
                            <a href="/login" class="btn-primary px-4 py-2 rounded-md">Login</a>
                            <a href="/register" class="btn-secondary px-4 py-2 rounded-md border border-blue-600">Register</a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>

    <!-- Mobile Navigation Sidebar -->
    <div id="mobileNav" class="mobile-nav md:hidden p-6">
        <div class="mobile-nav-close" id="mobileNavClose">
            <i class="fas fa-times"></i>
        </div>
        <div class="flex flex-col items-center mt-8">
            <div class="text-2xl font-bold text-blue-600 mb-8">
                <i class="fas fa-book-open mr-2"></i>KhataBook
            </div>
            
            <div class="flex flex-col items-center gap-4 w-full">
                <button id="mobileThemeToggle" class="theme-toggle p-2 rounded-full hover:bg-custom-gray mb-4">
                    <i class="fas fa-moon text-custom-primary"></i>
                </button>
                
                <% if (typeof isLoggedIn !== 'undefined' && isLoggedIn) { %>
                    <a href="/dashboard" class="btn-secondary px-4 py-2 rounded-md w-full text-center">Dashboard</a>
                    <a href="/profile" class="btn-secondary px-4 py-2 rounded-md w-full text-center">Profile</a>
                    <% if (typeof currentPath !== 'undefined' && currentPath === '/dashboard') { %>
                        <a href="/createHisab" class="btn-primary px-4 py-2 rounded-md w-full text-center">Create New Hisab</a>
                    <% } %>
                    <a href="/logout" class="btn-primary px-4 py-2 rounded-md w-full text-center mt-4">LogOut</a>
                <% } else { %>
                    <a href="/login" class="btn-primary px-4 py-2 rounded-md w-full text-center">Login</a>
                    <a href="/register" class="btn-secondary px-4 py-2 rounded-md w-full text-center border border-blue-600">Register</a>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Page Content Container -->
    <main class="container mx-auto px-4 py-6">
        <% if (typeof pageTitle !== 'undefined') { %>
            <h1 class="text-2xl md:text-3xl font-bold text-custom-primary mb-6"><%= pageTitle %></h1>
        <% } %>
    </main>
</body>
</html> 